<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qipoy.hitungluas.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Panjang"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textColor="#5e5e5e" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:text="0"
        android:id="@+id/edt_panjang"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lebar"
        android:id="@+id/textView2"
        android:layout_below="@+id/edt_panjang"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#5e5e5e" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:text="0"
        android:id="@+id/edt_lebar"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:id="@+id/btn_hitung"
        android:layout_below="@+id/edt_lebar"
        android:layout_alignParentStart="true"
        android:background="#DE0B5F"
        android:layout_marginTop="40dp"
        android:textColor="#faf7f7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_luas"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/btn_hitung" />

</RelativeLayout>
